SELECT *
FROM `placementdb`.`users`
FULL OUTER JOIN `placementdb`.`companydata`
ON `placementdb`.`users`.rollno = `placementdb`.`companydata`.rollno;

SELECT *
FROM users
FULL OUTER JOIN companydata
ON users.rollno = companydata.rollno;

